# Mistral OCR Configuration
# Copy this file to .env and fill in your values

# Required: Your Mistral API key from https://console.mistral.ai/
MISTRAL_API_KEY=your_api_key_here

# Optional: OCR model to use (default: mistral-ocr-latest)
MISTRAL_MODEL=mistral-ocr-latest

# Optional: Maximum file size in MB (default: 50)
MAX_FILE_SIZE_MB=50

# Optional: Maximum number of pages (default: 1000)
MAX_PAGES=1000

# Optional: Output format (default: markdown)
OUTPUT_FORMAT=markdown

# Optional: Include extracted images (default: true)
INCLUDE_IMAGES=true

# Optional: Enable verbose output (default: false)
VERBOSE=false